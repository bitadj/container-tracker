<h1>
	<%= @customer.name %>
</h1>

<dt>Customer ID</dt>
<dd><%= @customer.cust_num %></dd>

<dt>Customer Name</dt>
<dd><%= @customer.name %></dd>

<dt>Orders</dt>
<dd><%= render @customer.orders %></dd>

<br />
<%= link_to "Edit", edit_customer_path(@customer), class: "btn btn-info" %>
<%= button_to "Delete", customer_path(@customer), {method: :delete, confirm: "Are you sure you want to delete this customer?", class: "btn btn-danger"} %>
<br />
<%= link_to 'Back to all customers', customers_path %>

