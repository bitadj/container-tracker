<%= form_for @customer do |f| %>
	<div>
		<%= f.label :customer_id %> ID<br />
		<%= f.text_field :customer_id %>
	</div>

	<br />

	<div>
		<%= f.label :name %><br />
		<%= f.text_field :name %>
	</div>

	<br />
	
	<div><%= f.submit %> <%= button_tag "Reset", type: :reset %></div>
	
	<%= link_to "Cancel and go back", customers_path %>
<% end %>