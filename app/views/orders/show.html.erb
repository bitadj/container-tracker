<h1>
    <%= @order.customer.name %>
</h1>

<dt>P.O. Number</dt>
<dd><%= @order.po_num %></dd>

<dt>Start Date</dt>
<dd><%= @order.start_date.strftime '%-m/%-d/%-y' %></dd>

<dt>Cancel Date</dt>
<dd><%= @order.cancel_date.strftime '%-m/%-d/%-y' %></dd>

<dt>Number of Cartons</dt>
<dd><%= @order.num_cartons %></dd>

<dt>Container</dt>
<dd><%= @order.container.num_cartons %></dd>

<br />
<dt><%= link_to edit_order_path(@order), class: "btn btn-info btn-sm" do %>
        <span class="glyphicon glyphicon-pencil">edit</span>
    <% end %>
</dt>

<%= link_to order_path(@order), {method: :delete, confirm: "Are you sure you want to delete this order?", class: "btn btn-danger btn-sm"} do %>
    <span class="glyphicon glyphicon-trash"></span>
<% end %></dt>

<br /><br />

<dd><%= link_to 'Back to all orders', orders_path %></dd>