<tr onclick="window.location.href = '<%= url_for order_path(order) %>'">	
	<td><%= order.customer.name %></td>
	<td><%= link_to order.po_num, order %></td>
	<td><%= order.start_date.strftime '%m/%d/%y' %></td>
	<td><%= order.cancel_date.strftime '%m/%d/%y' %></td>
	<td><%= order.num_cartons %></td>
	<td><%= link_to edit_order_path(order), class: "btn btn-primary btn-sm" do %>
            <span class="glyphicon glyphicon-pencil">edit</span>
        <% end %> 
        <%= link_to order_path(order), {method: :delete, confirm: "Are you sure you want to delete this order?", class: "btn btn-danger btn-sm"} do %>
            <span class="glyphicon glyphicon-trash"></span>
        <% end %>
    </td>
</tr>

